<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rishabh.game1.PLAY"
    android:background="@drawable/onlinecasinogame2">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:text="ENTER THE AMOUNT YOU WANT TO START WITH :-"
            android:id="@+id/textView"
            android:textColor="#000000"
            android:layout_alignBottom="@+id/editText"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"

            style="@style/AppTheme"
            android:inputType="number"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:autoText="false"
            android:background="#fffefff9"
            android:contentDescription="Enter Your Guess Here"
            android:layout_weight="0.14" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:gravity="center"
            android:layout_gravity="center"
            android:onClick="guess"
            android:id="@+id/button3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp" />


    </LinearLayout>
</RelativeLayout>
